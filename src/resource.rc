  CONTROL "", IDC_LIST, WC_LISTVIEW, LVS_REPORT | LVS_SINGLESEL |
    LVS_SHOWSELALWAYS | WS_BORDER | WS_TABSTOP, 5, 18, 290, 136
  PUSHBUTTON "Import", IDC_IMPORT, 5, 160, 40, 14
  PUSHBUTTON "Remove", IDC_REMOVE, 48, 160, 40, 14
